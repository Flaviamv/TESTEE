{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Executar SistemVenda (https)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet: build",
      "program": "dotnet",
      "args": [
        "run",
        "--project", "${workspaceFolder}/1-Aplicacao/SistemVenda.csproj",
        "--launch-profile", "https"
      ],
      "cwd": "${workspaceFolder}/1-Aplicacao",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/1-Aplicacao/Views"
      }
    }
  ]
}
