@{
    ViewData["Title"] = "Grafico";
}

<script src="https://cdnis.cloudflaare.com/ajax/libs/Chart.bundle.min.js"></script>

<h2> Total de Vendas por Produto</h2>
<hr />

<canvas id="myChart"></canvas>

<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var chart = new Chart(cxt, {
        type: 'pie',

        data: (
            labels: [@Html.Raw(ViewBag.Labels)],
            datasets: [{
                label: 'My First dataset',
                backgroundColor: (@Html.Raw(@ViewBag.Cores)],
                borderColor: '#fff',
                data: [@Html.Raw(@ViewBag.Valores)]
            }]
        },

        options: {}
        });

</script>